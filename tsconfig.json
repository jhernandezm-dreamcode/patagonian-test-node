{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": ["node","jest"],
  },
  "lib": ["es2015"],
  "include": [
    "./src/**/*",
    "./test/**/*",
    "./global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "logs",
    "docs",
    "dist"
  ]
}